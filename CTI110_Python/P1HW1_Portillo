print('-----Calculating Exponents-----')
base = int(input('Enter an interger as the base value:'))
exponent = int(input('Enter an interger as the exponents:'))
result = base**exponent
print(f"{base} raised to the power of {exponent} is {result}!!")


print("\n----Addition and Subtraction-----")
start_num = int(input('Enter a starting integer:'))
add_num = int(input('Enter an interger to add:'))
sub_num = int(input('Enter an interger to subtract:'))
final_result = start_num + add_num - sub_num
print(f'{start_num} + {add_num} - {sub_num} is equal to {final_result}')

